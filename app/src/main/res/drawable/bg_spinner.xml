<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorGreyLight" android:startColor="@color/colorGreyLight" android:type="linear" />

                    <stroke android:width="0.5dp" android:color="@color/text_color_grey" />

                    <corners android:radius="3dp" />

                    <padding android:bottom="@dimen/dimen_0_5x"
                        android:left="0dp"
                        android:right="@dimen/dimen_0_5x"
                        android:top="@dimen/dimen_0_5x" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow_down" />

            </item>

        </layer-list>

    </item>

</selector>