<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:colorPrimary">@color/actionbar</item>
        <item name="colorPrimary">@color/actionbar</item>
    </style>

  <!--  <item name="android:actionBarStyle">@style/TLNActionBar</item>
    <style name="Theme.YourTheme" parent="android:style/Theme">
        <item name="android:actionBarStyle">@style/TLNActionBar</item>
    </style>

    <style name="TLNActionBar">
        <item name="android:titleTextStyle">@style/TLNActionBarTitleTextStyle</item>
    </style>

    <style name="TLNActionBarTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>-->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:divider">@color/common_action_bar_splitter</item>
        <item name="android:dividerHorizontal">@null</item>
        <item name="android:dividerVertical">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="form_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/edit_text_bg</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin_top</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="gray_edit_text" parent="form_input">
        <item name="android:padding">8dp</item>
    </style>

    <style name="transparent_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/purple_button</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textColor">@color/transparent_button_text</item>-->
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize"></style>

    <style name="label_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/label_text_view</item>
    </style>

    <style name="gray_spinner_bg" parent="form_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/edit_text_bg</item>
        <!--<item name="android:padding">12dp</item>-->
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="sub_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="btn_home_screen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:textAppearance">@android:style/TextAppearance.Small</item>-->
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="StyleHomeScreenOption">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Material.Widget.PopupMenu.Small
        </item>
        <item name="android:drawablePadding">@dimen/home_view_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>
   <!--
     android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_0_5x"
        android:paddingEnd="@dimen/dimen_1x"
        android:paddingBottom="@dimen/dimen_0_2x"
        android:text="@string/street_address"
        android:textColor="@color/black"
        android:textSize="@dimen/text_mediumLarge"
        android:textStyle="bold"
        -->
    <style name="mTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/dimen_0_5x</item>
        <item name="android:paddingEnd">@dimen/dimen_1x</item>
        <item name="android:paddingBottom">@dimen/dimen_0_2x</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_mediumLarge</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
</resources>
