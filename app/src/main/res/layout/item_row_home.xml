<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mLayoutMainHomeItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:background="@drawable/bg_selector"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_1_5x"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <ImageView
            android:id="@+id/mImgHomeItem"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_latestscore_icon" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mImgCircleHomeItem"
            android:layout_width="@dimen/dimen_3x"
            android:layout_height="@dimen/dimen_3x"
            android:visibility="gone"
            app:civ_border_color="@color/blue"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/mTxtBagdeHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mImgHomeItem"
            android:background="@drawable/bg_badge_grey"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="new"
            android:visibility="gone" />
    </RelativeLayout>


    <TextView
        android:id="@+id/mTxtHomeItem"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.4"
        android:paddingStart="@dimen/dimen_0_2x"
        android:paddingEnd="@dimen/dimen_0_2x"
        android:gravity="center_horizontal"
        android:text="Players Of The Year(POTY)"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="@dimen/flipper_down_btn_text"
        android:textStyle="bold" />

</LinearLayout>