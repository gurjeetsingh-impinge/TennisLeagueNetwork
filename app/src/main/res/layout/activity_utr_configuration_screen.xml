<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.utr.UtrConfigurationScreen">

    <include
        android:id="@+id/include"
        layout="@layout/layout_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTxtFirstUTR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_0_7x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/utr_first_line"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/mTxtData1UTR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_1x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/utr_can_now_be_seen_on_the_tennis_channel"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTxtFirstUTR" />

    <TextView
        android:id="@+id/mTxtData2UTR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_1x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/text_color_grey"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTxtData1UTR" />

    <TextView
        android:id="@+id/mTxtQuestion1UTR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_1x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/link_normal"
        android:textSize="@dimen/text_mediumLarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTxtData2UTR" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mSwitchQuestion1UTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_0_2x"
        android:background="@drawable/bg_btn"
        android:padding="0.2dp"
        app:cardBackgroundColor="@color/link_normal"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTxtQuestion1UTR">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mQuestion1YesUTR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:minWidth="45dp"
                android:text="Yes"
                android:textColor="@color/text_color_grey" />

            <TextView
                android:id="@+id/mQuestion1NoUTR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:minWidth="45dp"
                android:text="No"
                android:textColor="@color/text_color_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_0_2x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:text="We do not send them your email or address? We are only sending them your Name, results and city, state. If you already have an UTR Profile they are making the connection. "
        android:textColor="@color/text_color_greylight"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mSwitchQuestion1UTR" />

    <TextView
        android:id="@+id/mTxtQuestion2UTR"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_1x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/link_normal"
        android:textSize="@dimen/text_mediumLarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />
    <androidx.cardview.widget.CardView
        android:id="@+id/mSwitchQuestion2UTR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_0_2x"
        android:background="@drawable/bg_btn"
        android:padding="0.2dp"
        app:cardBackgroundColor="@color/link_normal"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTxtQuestion2UTR">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mQuestion2YesUTR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/link_normal"
                android:gravity="center"
                android:minWidth="45dp"
                android:text="Yes"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mQuestion2NoUTR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:minWidth="45dp"
                android:text="No"
                android:textColor="@color/text_color_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_0_2x"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="3dp"
        android:text="Once these scores et submitted to UTR they are able to process a rating with high level of confidence to build a rating."
        android:textColor="@color/text_color_greylight"
        android:textSize="@dimen/text_mediumLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mSwitchQuestion2UTR" />
</androidx.constraintlayout.widget.ConstraintLayout>