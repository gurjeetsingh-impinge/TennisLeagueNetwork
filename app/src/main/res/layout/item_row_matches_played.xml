<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mLayoutMainMatchesPlayed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/bg_selector"
    android:gravity="center">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_selector"
    android:gravity="center"
    android:layout_marginBottom="@dimen/_5sdp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">



    <TextView
        android:id="@+id/mTxtPositionMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.4"
        android:paddingStart="@dimen/dimen_0_5x"
        android:paddingEnd="@dimen/dimen_0_5x"
        android:gravity="center_horizontal"
        android:text="#1"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mTxtPlayNameTextMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:paddingStart="@dimen/dimen_0_5x"
        android:paddingEnd="@dimen/dimen_0_5x"
        android:gravity="center_horizontal"
        android:text="Player : "
        android:textColor="@color/green"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/mTxtPositionMatchesPlayed"
        app:layout_constraintStart_toEndOf="@id/mTxtPositionMatchesPlayed"/>

    <TextView
        android:id="@+id/mTxtPlayNameMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:paddingStart="@dimen/dimen_0_5x"
        android:paddingEnd="@dimen/dimen_0_5x"
        android:gravity="center_horizontal"
        android:text="#1"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/mTxtPositionMatchesPlayed"
        app:layout_constraintStart_toEndOf="@id/mTxtPlayNameTextMatchesPlayed"/>

    <TextView
        android:id="@+id/mTxtHashTextMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="@dimen/_3sdp"
        android:paddingStart="@dimen/dimen_0_5x"
        android:gravity="center_horizontal"
        android:text="#"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mTxtPositionMatchesPlayed"
        app:layout_constraintStart_toStartOf="@id/mTxtPlayNameTextMatchesPlayed"/>

    <TextView
        android:id="@+id/mTxtTextMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:paddingEnd="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:text="@string/matches_played"
        android:textColor="@color/green"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="@id/mTxtHashTextMatchesPlayed"
        app:layout_constraintStart_toEndOf="@id/mTxtHashTextMatchesPlayed"/>

    <TextView
        android:id="@+id/mTxtValueMatchesPlayed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:paddingEnd="@dimen/dimen_0_5x"
        android:gravity="center_horizontal"
        android:text="#1"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/mTxtTextMatchesPlayed"
        app:layout_constraintStart_toEndOf="@id/mTxtTextMatchesPlayed"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>