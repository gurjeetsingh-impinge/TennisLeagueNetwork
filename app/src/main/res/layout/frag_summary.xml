<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tennisdc.tln.modules.poty.FragSummary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/prize_pool_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_button_light"
            android:visibility="visible">

            <TextView
                android:id="@+id/prize_pool_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/prize_pool_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prize_pool_title"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/level_pool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="18sp" />

                <!--<TextView
                    android:id="@+id/place_pool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal" />-->

                <TextView
                    android:id="@+id/total_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/prize_pool_relative" />

        <RelativeLayout
            android:id="@+id/league_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:background="@color/gray_button_light"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/league_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/league_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/league_sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/league_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="6dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/league_desc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/league_title_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tourney_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/league_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ladder_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/partner_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/league_relative" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:background="@color/gray_button_light"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/league_growth_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/league_growth_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/league_growth_sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/league_growth_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="6dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/league_growth_desc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/league_growth_title_layout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/leagues_growth_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tourneys_growth_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/partner_growth_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ideas_growth_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/blog_growth_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/reviews_growth_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/ball_icon"
                    android:drawablePadding="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
