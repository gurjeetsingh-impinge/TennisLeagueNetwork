<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    tools:context="com.tennisdc.tln.modules.register.FragRegisterStep1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/txt_create_account"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            style="@style/label_text_view"
            android:text="@string/hint_fname" />

        <EditText
            android:id="@+id/edtFName"
            style="@style/gray_edit_text"
            android:hint="@string/hint_fname"
            android:inputType="textPersonName" />


        <TextView
            style="@style/label_text_view"
            android:text="@string/hint_lname" />

        <EditText
            android:id="@+id/edtLName"
            style="@style/gray_edit_text"
            android:hint="@string/hint_lname"
            android:inputType="textPersonName" />

        <TextView
            style="@style/label_text_view"
            android:text="@string/hint_email" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/gray_edit_text"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress" />


        <TextView
            style="@style/label_text_view"
            android:text="@string/hint_password" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtPassword"
                style="@style/gray_edit_text"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:maxLength="30" />

            <TextView
                android:id="@+id/txtView_Show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/edtPassword"
                android:layout_alignRight="@+id/edtPassword"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:paddingTop="5dp"
                android:text="@string/txt_show_pwd"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/link_text" />
        </RelativeLayout>

        <TextView
            style="@style/label_text_view"
            android:text="@string/hint_confirm_password" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtConfPassword"
                style="@style/gray_edit_text"
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword"
                android:maxLength="30" />

            <TextView
                android:id="@+id/txtView_ConfirmShow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/edtConfPassword"
                android:layout_alignRight="@+id/edtConfPassword"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:paddingTop="5dp"
                android:text="@string/txt_show_pwd"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/link_text" />
        </RelativeLayout>

        <!--<TextView-->
            <!--style="@style/label_text_view"-->
            <!--android:text="@string/hint_zipcode" />-->

        <!--<EditText-->
            <!--android:id="@+id/edtZipCode"-->
            <!--style="@style/gray_edit_text"-->
            <!--android:hint="@string/hint_zipcode"-->
            <!--android:inputType="number"-->
            <!--android:maxLength="5" />-->


        <TextView
            style="@style/label_text_view"
            android:text="State Code" />

        <TextView
            android:id="@+id/tvStateCode"
            style="@style/gray_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hint_state_code"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/button_color" />


        <TextView
            android:id="@+id/tvDomainText"
            style="@style/label_text_view"
            android:text="Domain" />

        <TextView
            android:id="@+id/tvDomain"
            style="@style/gray_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hint_domain"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/button_color" />

        <TextView
            android:id="@+id/txtCity"
            style="@style/label_text_view"
            android:visibility="gone"
            android:text="@string/hint_city" />

        <EditText
            android:id="@+id/edtCity"
            style="@style/gray_edit_text"
            android:visibility="gone"
            android:hint="@string/hint_city"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_grey"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="4dp" />

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="@color/link_normal" />
        </LinearLayout>


        <Button
            android:id="@+id/btnNext"
            style="@style/transparent_button"
            android:layout_marginTop="@dimen/button_margin_top"
            android:background="@color/purple"
            android:text="@string/btn_next"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>