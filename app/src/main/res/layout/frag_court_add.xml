<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/viewFlipper"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:scrollbarStyle="outsideOverlay"
             tools:context="com.tennisdc.tln.modules.courts.FragCourtAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                style="@style/label_text_view"
                android:text="Name"/>

            <EditText
                android:id="@+id/edtCourtName"
                style="@style/gray_edit_text"
                android:hint="Name"
                android:inputType="textPersonName"/>

            <TextView
                style="@style/label_text_view"
                android:text="Location"/>

            <Spinner
                android:id="@+id/spnrLocations"
                style="@style/gray_spinner_bg"/>

            <TextView
                style="@style/label_text_view"
                android:text="Court Region"/>

            <Spinner
                android:id="@+id/spnrCourtRegion"
                style="@style/gray_spinner_bg"/>

            <CheckBox
                android:id="@+id/chkBxIsClub"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Is a Club"/>

            <CheckBox
                android:id="@+id/chkBxIsTennisStore"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Is a Tennis Store"/>

            <CheckBox
                android:id="@+id/chkBxIsRacquetStringer"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Is a Racquet Stringer"/>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/label_text_view"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="Total # Courts"/>

                <com.tennisdc.tln.ui.NumberPickerHorizontal
                    android:id="@+id/pickerTotalCourts"
                    style="@style/gray_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/label_text_view"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="# Indoor Courts"/>

                <com.tennisdc.tln.ui.NumberPickerHorizontal
                    android:id="@+id/pickerIndoorCourts"
                    style="@style/gray_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/label_text_view"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="# Clay Courts"/>

                <com.tennisdc.tln.ui.NumberPickerHorizontal
                    android:id="@+id/pickerClayCourts"
                    style="@style/gray_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/label_text_view"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="# Lighted Courts"/>

                <com.tennisdc.tln.ui.NumberPickerHorizontal
                    android:id="@+id/pickerLightedCourts"
                    style="@style/gray_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/chkBxHasHittingWalls"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Has hitting wall"/>

            <CheckBox
                android:id="@+id/chkBxRestricted"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Restricted"/>

            <CheckBox
                android:id="@+id/chkBxHasBathroom"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Has Bathroom"/>

            <CheckBox
                android:id="@+id/chkBxHasWater"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Has access to water"/>

            <CheckBox
                android:id="@+id/chkBxHasFee"
                style="@style/label_text_view"
                android:layout_width="match_parent"
                android:text="Has Fee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/label_text_view"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="Fee"/>

                <com.tennisdc.tln.ui.NumberPickerHorizontal
                    android:id="@+id/pickerCourtFee"
                    style="@style/gray_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                style="@style/label_text_view"
                android:text="Phone"/>

            <EditText
                android:id="@+id/edtPhone"
                style="@style/gray_edit_text"
                android:hint="Phone"
                android:inputType="phone"/>

            <TextView
                style="@style/label_text_view"
                android:text="Address"/>

            <EditText
                android:id="@+id/edtAddress"
                style="@style/gray_edit_text"
                android:hint="Address"
                android:inputType="textPostalAddress"/>

            <TextView
                style="@style/label_text_view"
                android:text="City"/>

            <EditText
                android:id="@+id/edtCity"
                style="@style/gray_edit_text"
                android:hint="City"/>

            <TextView
                style="@style/label_text_view"
                android:text="State"/>

            <EditText
                android:id="@+id/edtState"
                style="@style/gray_edit_text"
                android:hint="State"/>

            <TextView
                style="@style/label_text_view"
                android:text="@string/hint_zipcode"/>

            <EditText
                android:id="@+id/edtZipCode"
                style="@style/gray_edit_text"
                android:hint="@string/hint_zipcode"
                android:inputType="number"
                android:maxLength="5"/>

            <TextView
                style="@style/label_text_view"
                android:text="Website"/>

            <EditText
                android:id="@+id/edtWebsite"
                style="@style/gray_edit_text"
                android:hint="ex. http://"
                android:inputType="textWebEditText"/>

            <TextView
                style="@style/label_text_view"
                android:text="Notes"/>

            <EditText
                android:id="@+id/edtNotes"
                style="@style/gray_edit_text"
                android:gravity="top"
                android:hint="Notes"
                android:inputType="text|textMultiLine"
                android:minLines="3"/>

        </LinearLayout>
    </ScrollView>

</ViewFlipper>