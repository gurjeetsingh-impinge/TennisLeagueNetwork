<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    tools:context="com.tennisdc.tln.modules.profile.FragProfileNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_name"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/txt_full_name"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_name_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_email"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/hint_email"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_email_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_Email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_password"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/hint_password"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_password_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_Password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:inputType="textPassword"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_mobile"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/hint_mobile_number"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_mobile_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                        <ImageView
                            android:id="@+id/img_mobile_upload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_tick"/>
                        <ImageView
                            android:id="@+id/img_mobile_cancel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_cancel"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_Mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                        <EditText
                            android:id="@+id/edittext_Mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/gray_edit_text"
                            android:visibility="gone"
                            android:inputType="phone"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBtn_playOff_notifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/txt_playoff_notifier"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBtn_ladder_notifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/txt_ladder_notifier" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBtn_division_score_notifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/txt_division_score_notifier" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBtn_playWorkDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/txt_can_play_workday" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBtn_facebookSharing"
            android:layout_width="match_parent"
            android:checked="false"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="@string/facebook_sharing" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_view_address"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:visibility="gone"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/txt_address"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_address_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_home_court"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/txt_preferred_home_court"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_homeCourt_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                        <ImageView
                            android:id="@+id/img_homeCourt_upload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_tick"/>
                        <ImageView
                            android:id="@+id/img_homeCourt_cancel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_cancel"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_preferred_home_court"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:paddingLeft="2dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                        <Spinner
                            android:id="@+id/spnrPreferredHomeCourt"
                            style="@style/gray_spinner_bg"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_ageRange"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="@string/txt_age_range"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:paddingLeft="3dp"
                            android:text="@string/txt_age_range_hint"
                            android:textSize="12sp"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                        <ImageView
                            android:id="@+id/img_ageRange_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                        <ImageView
                            android:id="@+id/img_ageRange_upload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_tick"/>
                        <ImageView
                            android:id="@+id/img_ageRange_cancel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_cancel"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_age_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:paddingLeft="2dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                        <Spinner
                            android:id="@+id/spnrAgeRange"
                            android:visibility="gone"
                            style="@style/gray_spinner_bg"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_favPlayer"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="@string/hint_fav_player"
                            android:textColor="@color/label_text_view"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/img_favPlayer_edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"/>
                        <ImageView
                            android:id="@+id/img_favPlayer_upload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_tick"/>
                        <ImageView
                            android:id="@+id/img_favPlayer_cancel"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/list_item_background"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_cancel"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginRight="5dp"
                        android:background="#ccc"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtView_favPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:paddingLeft="2dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                        <Spinner
                            android:id="@+id/spnrFavPlayer"
                            android:visibility="gone"
                            style="@style/gray_spinner_bg"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>